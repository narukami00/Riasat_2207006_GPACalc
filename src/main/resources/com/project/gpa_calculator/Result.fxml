<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.gpa_calculator.controllers.ResultController"
            prefWidth="1600" prefHeight="750" styleClass="root-pane">
    <top>
        <VBox alignment="CENTER" spacing="8">
            <padding><Insets top="20" bottom="15"/></padding>
            <HBox alignment="CENTER" spacing="10">
                <Label text="ðŸ†" style="-fx-font-size: 32px;"/>
                <Label text="Final Results" styleClass="app-title" style="-fx-font-size: 38px;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="18" VBox.vgrow="ALWAYS">
            <padding><Insets top="10" left="50" right="50" bottom="10"/></padding>

            <!-- GPA Display -->
            <HBox spacing="25" alignment="CENTER" styleClass="card" style="-fx-background-color: linear-gradient(to right, rgba(255,255,255,0.97), rgba(245,245,255,0.97)); -fx-padding: 25 40 25 40; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0, 0, 5);">
                <VBox alignment="CENTER" spacing="5">
                    <Label text="YOUR GPA" style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold; -fx-letter-spacing: 1.5px;"/>
                    <HBox alignment="CENTER" spacing="8">
                        <Label fx:id="lblGPA" style="-fx-text-fill: #667eea; -fx-font-size: 52px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.3), 8, 0, 0, 2);"/>
                        <Label text="/4.00" style="-fx-text-fill: #999; -fx-font-size: 20px; -fx-padding: 8 0 0 0;"/>
                    </HBox>
                </VBox>
                
                <Separator orientation="VERTICAL" prefHeight="80" style="-fx-background-color: rgba(102,126,234,0.25);"/>
                
                <VBox alignment="CENTER" spacing="5">
                    <Label text="TOTAL CREDITS" style="-fx-text-fill: #764ba2; -fx-font-size: 14px; -fx-font-weight: bold; -fx-letter-spacing: 1.5px;"/>
                    <HBox alignment="CENTER" spacing="5">
                        <Label fx:id="lblTotalCredits" style="-fx-text-fill: #764ba2; -fx-font-size: 42px; -fx-font-weight: bold;"/>
                        <Label text="hrs" style="-fx-text-fill: #999; -fx-font-size: 16px; -fx-padding: 5 0 0 0;"/>
                    </HBox>
                </VBox>
            </HBox>

            <!-- Course Details Table -->
            <VBox spacing="8" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER" spacing="8">
                    <Label text="ðŸ“š" style="-fx-font-size: 20px;"/>
                    <Label text="COURSE BREAKDOWN" style="-fx-text-fill: white; -fx-font-size: 17px; -fx-font-weight: bold; -fx-letter-spacing: 2px;"/>
                </HBox>
                
                <TableView fx:id="tableResult" VBox.vgrow="ALWAYS" style="-fx-background-radius: 12; -fx-border-radius: 12;">
                    <columns>
                        <TableColumn text="Course Name" fx:id="rColName" minWidth="220"/>
                        <TableColumn text="Code" fx:id="rColCode" minWidth="90" maxWidth="130"/>
                        <TableColumn text="Credit" fx:id="rColCredit" minWidth="80" maxWidth="110"/>
                        <TableColumn text="Grade" fx:id="rColGrade" minWidth="80" maxWidth="110"/>
                        <TableColumn text="Points" fx:id="rColPoints" minWidth="90" maxWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="18">
            <padding><Insets top="12" bottom="20"/></padding>
            <Button text="ðŸ’¾ Export Results" onAction="#onExport" prefWidth="190" prefHeight="45" styleClass="primary-btn" style="-fx-font-size: 14px;"/>
            <Button text="â† Back to Home" onAction="#onBack" prefWidth="190" prefHeight="45" styleClass="primary-btn" style="-fx-font-size: 14px;"/>
        </HBox>
    </bottom>
</BorderPane>
