<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.gpa_calculator.controllers.ResultController"
            prefWidth="1000" prefHeight="750" styleClass="root-pane">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding><Insets top="30" bottom="25"/></padding>
            <Label text="ðŸ† GPA Result" styleClass="app-title"/>
            <Label text="Congratulations on completing your courses!" styleClass="welcome-text" style="-fx-font-size: 15px; -fx-font-style: italic;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="25">
            <padding><Insets top="20" left="40" right="40" bottom="20"/></padding>

            <HBox spacing="30" alignment="CENTER">
                <VBox alignment="CENTER" spacing="10" styleClass="card" prefWidth="350" prefHeight="120">
                    <Label text="Total Credits" style="-fx-text-fill: #667eea; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label fx:id="lblTotalCredits" styleClass="highlight-label" style="-fx-text-fill: #667eea; -fx-font-size: 32px;"/>
                </VBox>
                
                <VBox alignment="CENTER" spacing="10" styleClass="card" prefWidth="350" prefHeight="120">
                    <Label text="Your GPA" style="-fx-text-fill: #d549e6; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label fx:id="lblGPA" styleClass="highlight-label" style="-fx-text-fill: #d549e6; -fx-font-size: 38px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>

            <VBox spacing="12" VBox.vgrow="ALWAYS">
                <Label text="Course Details" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <TableView fx:id="tableResult" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Course Name" fx:id="rColName" minWidth="180"/>
                        <TableColumn text="Code" fx:id="rColCode" minWidth="80" maxWidth="120"/>
                        <TableColumn text="Credit" fx:id="rColCredit" minWidth="80" maxWidth="120"/>
                        <TableColumn text="Grade" fx:id="rColGrade" minWidth="80" maxWidth="120"/>
                        <TableColumn text="Grade Points" fx:id="rColPoints" minWidth="100" maxWidth="140"/>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15">
            <padding><Insets top="15" bottom="25"/></padding>
            <Button text="ðŸ’¾ Export Results" onAction="#onExport" prefWidth="180" prefHeight="45" styleClass="primary-btn" style="-fx-font-size: 14px;"/>
            <Button text="ðŸ  Back to Home" onAction="#onBack" prefWidth="180" prefHeight="45" styleClass="primary-btn" style="-fx-font-size: 14px;"/>
        </HBox>
    </bottom>
</BorderPane>
