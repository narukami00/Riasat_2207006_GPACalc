<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="750" prefWidth="1000" styleClass="root-pane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.project.gpa_calculator.controllers.HistoryController">

    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="30" bottom="20" />
            </padding>
            <Label styleClass="app-title" text="ðŸ“œ Calculation History" style="-fx-font-size: 42px;" />
        </VBox>
    </top>

    <center>
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" bottom="40" left="40" right="40" />
            </padding>

            <!-- Left side: History list -->
            <VBox spacing="15" HBox.hgrow="ALWAYS" styleClass="card" style="-fx-min-width: 420px; -fx-max-width: 420px;">
                <padding>
                    <Insets top="20" bottom="20" left="20" right="20" />
                </padding>
                
                <Label text="ðŸ•’ Previous Calculations" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                <Separator />
                
                <ListView fx:id="historyListView" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: rgba(0,0,0,0.1); -fx-border-radius: 8; -fx-background-radius: 8;">
                </ListView>
            </VBox>

            <!-- Right side: Course details -->
            <VBox spacing="15" HBox.hgrow="ALWAYS" styleClass="card">
                <padding>
                    <Insets top="20" bottom="20" left="20" right="20" />
                </padding>
                
                <Label text="ðŸ“Š Course Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                <Separator />
                
                <Label fx:id="detailsLabel" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #555555; -fx-font-style: italic;" />
                
                <TableView fx:id="courseTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="courseNameCol" text="Course Name" prefWidth="150" />
                        <TableColumn fx:id="courseCodeCol" text="Code" prefWidth="80" />
                        <TableColumn fx:id="creditCol" text="Credit" prefWidth="60" />
                        <TableColumn fx:id="teacher1Col" text="Teacher 1" prefWidth="100" />
                        <TableColumn fx:id="teacher2Col" text="Teacher 2" prefWidth="100" />
                        <TableColumn fx:id="gradeCol" text="Grade" prefWidth="60" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="15" bottom="25" />
            </padding>
            <Button fx:id="backBtn" onAction="#onBack" text="â† Back to Home" styleClass="button" style="-fx-font-size: 14px; -fx-padding: 10 30 10 30;" />
        </HBox>
    </bottom>

</BorderPane>
